{
    "scripts": {
        "prebuild": "rimraf out-lib out-tsc",
        "build": "tsc && rollup -c",
        "prepublishOnly": "yarn run build",
        "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
        "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check"
    },
    "dependencies": {
        "@coral-xyz/anchor": "^0.27.0",
        "@solana/spl-token": "^0.3.6",
        "@solana/web3.js": "^1.72.0",
        "@types/bn.js": "^5.1.1",
        "@types/jest": "^29.5.1",
        "@types/node": "^20.1.7",
        "bn.js": "^5.2.1",
        "eip55": "^2.1.0",
        "jest": "^29.3.1",
        "rimraf": "^5.0.0",
        "ts-jest": "^29.0.3"
    },
    "devDependencies": {
        "prettier": "^2.6.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "/tests/.*\\.spec\\.(ts|tsx)$",
        "testTimeout": 30000
    }
