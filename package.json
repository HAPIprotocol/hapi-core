{
  "name": "@hapi.one/core-cli",
  "version": "0.12.2",
  "publishConfig": {
    "access": "public"
  },
  "description": "Client library for HAPI core contract",
  "author": "HAPI Protocol",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/HAPIprotocol/hapi-core.git"
  },
  "keywords": [
    "HAPI",
    "protocol",
    "cybersecurity",
    "Solana",
    "client"
  ],
  "main": "out-lib/index.cjs.js",
  "module": "out-lib/index.esm.js",
  "types": "out-lib/index.d.ts",
  "files": [
    "out-lib/**/*"
  ],
  "scripts": {
    "prebuild": "rimraf out-lib out-tsc",
    "build": "tsc && rollup -c",
    "prepublishOnly": "npm run build",
    "test": "anchor test",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.25.0",
    "@solana/spl-token": "^0.1.8",
    "eip55": "^2.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "rollup": "^2.61.1",
    "rollup-plugin-dts": "^4.0.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/tests/.*\\.spec\\.(ts|tsx)$",
    "testTimeout": 30000
  }
}
